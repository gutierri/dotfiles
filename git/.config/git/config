[user]
	email = me@gutierri.me
	name = Gutierri Barboza
	signingkey = 559063220EDC0F4F
[color]
	ui = false
[core]
	editor = vim
	excludesfile = ~/.config/git/ignore
[diff]
	tool = vimdiff
[commit]
	gpgsign = true
[alias]
	git = !exec git
	s = status --short
	st = status --short
	c = commit
	cm = commit -m
	ca = commit --amend
	can = commit --amend --no-edit
	b = branch --sort=-committerdate --format='%(HEAD) %(refname:short) ~ %(committerdate:relative)'
	ba = branch --all --sort=-committerdate --format='%(HEAD) %(refname:short) ~ %(committerdate:relative)'
	t = tag
	co = checkout
	cl = clone
	d = diff
	dc = diff --cached
	l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	a = add
	ph = push
	phf = push --force
	pl = pull
	pla = pull --all
	sh = stash
	shl = stash list
	sw = show
	re = rebase
	rei = rebase -i
	uncommit = reset --soft HEAD~1
	cleanout = !git clean -df && git checkout -- .
	open-last = !vim -O $(git diff-tree --no-commit-id --name-only -r HEAD)
	ignore-add = "!f() { grep -iq \"$1\" .gitignore || echo \"$1\" >> .gitignore; }; f"
[pull]
	rebase = true
[init]
	defaultBranch = main
[includeIf "gitdir:/data/data/com.termux/files/home/"]
    path = ~/.config/git/termux-config
