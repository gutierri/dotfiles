# Startuo Message
startup_message off

# Visual Bell
vbell off

# Change bind C-a -> C-j
escape ^Jj

# Timeout
maptimeout 5

# 256 colors on rxvt
term rxvt-unicode-256color

# Fix residual editors
altscreen on

# Name column windowlist
windowlist string "%4n %h%=%f"

# Hardstatus & Caption
hardstatus alwayslastline
hardstatus string '%{= wK} %-Lw%{+ wK}(#)%n%f %t%{-}%+Lw %= Session: %S'

## First window start at 1
bind c screen 1
bind ^c screen 1
bind 0 select 10
screen 1

# Save layout after detached and attached
layout save default
