escape s-j

set startupmessage on

set msgwait 2
set bgcolor #EBEBEB
set fgcolor #2F2F2F
set font "FreeMono:size=11"
set inputwidth 0
set framefmt [%f] %c (%wx%h)
set onlyborder 0

set barborder 1

set border 3
set fwcolor #ef4291
set bwcolor #9F9F9F

set winname class

set rudeness 12

# workspaces
exec rpws init 4 -k

bind F1 exec rpws 1
bind F2 exec rpws 2
bind F3 exec rpws 3
bind F4 exec rpws 4

# Shortcuts
bind Escape abort

bind C-r restart

bind space exec rofi -modi "drun,run,system-menu:$HOME/.local/share/rofi/rofi-power-menu/rofi-power-menu --no-symbols" -show drun

bind slash swap

bind S split
bind C-S split
bind bar hsplit

# vi moves
bind h focusleft
bind j focusdown
bind k focusup
bind l focusright
bind H exchangeleft
bind J exchangedown
bind K exchangeup
bind L exchangeright

# tab cycles windows
bind Tab focus
bind ISO_Left_Tab focusprev

unbind C-a
unbind a
bind d time

# gnu screen binds
bind C-k delete
bind C-K kill
unbind C-x
unbind x
bind x exec light-locker-command -l
bind X remove

bind M-h removeleft
bind M-j removedown
bind M-k removeup
bind M-l removeright

definekey top Print exec scrot $HOME/Pictures/Screenshots/$(date +%Y-%m-%d-%H--%M--%S).png

# fn keys
definekey top XF86AudioRaiseVolume exec amixer -q set Master 6%+ && ratpoison -c "echo volume: $(amixer sget Master | grep -i left | grep -ioP '\[([0-9].+%)\]' | tr -d '[|]')"
definekey top XF86AudioLowerVolume exec amixer -q set Master 6%- && ratpoison -c "echo volume: $(amixer sget Master | grep -i left | grep -ioP '\[([0-9].+%)\]' | tr -d '[|]')"
definekey top XF86AudioMute exec pactl set-sink-mute 0 toggle && ratpoison -c "echo volume: muted"
definekey top XF86AudioMicMute exec pactl set-source-mute 1 toggle && ratpoison -c "echo mic: muted"
definekey top XF86ScreenSaver exec light-locker-command -l
definekey top XF86MonBrightnessUp exec xbacklight +20% && ratpoison -c "echo $(xbacklight -get | cut -c 1,2)%"
definekey top XF86MonBrightnessDown exec xbacklight -20% && ratpoison -c "echo $(xbacklight -get | cut -c 1,2)%"
definekey top XF86AudioPrev exec mpris2controller Previous
definekey top XF86AudioPlay exec mpris2controller PlayPause
definekey top XF86AudioNext exec mpris2controller Next


# Java Applications
exec wmname LG3D

# Unmanage windows
unmanage pinentry
unmanage qconsole

# patched settings
set ignorehints on

exec xsetroot -solid "#EBEBEB"
