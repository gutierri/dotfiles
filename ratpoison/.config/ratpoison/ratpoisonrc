set startupmessage off
escape s-j

set msgwait 3
set barborder 2
set barpadding 10 5
set bgcolor #EBEBEB
set fgcolor #2F2F2F
set font "terminus:size=9"
set inputwidth 0
set padding 0 0 0 0
set framefmt [%f] %c (%wx%h)
set onlyborder 0

set border 3
set fwcolor #ef4291
set bwcolor #9F9F9F

set winname class

set rudeness 12

# workspaces
exec rpws init 4 -k

bind F1 exec rpws 1
bind F2 exec rpws 2
bind F3 exec rpws 3
bind F4 exec rpws 4

# Shortcuts
bind Escape abort

bind C-r restart

bind c exec urxvt
bind C-c exec urxvt

bind space exec rofi -modi "drun,run,system-menu:$HOME/.local/share/rofi/rofi-power-menu/rofi-power-menu --no-symbols" -show drun

bind slash swap

bind S split
bind C-S split
bind bar hsplit

# vi moves
bind h focusleft
bind j focusdown
bind k focusup
bind l focusright
bind H exchangeleft
bind J exchangedown
bind K exchangeup
bind L exchangeright

# tab cycles windows
bind Tab focus
bind ISO_Left_Tab focusprev

# (wip) gnu screen binds
bind C-k delete
bind C-K kill

bind x exec light-locker-command -l
bind X remove
bind M-h removeleft
bind M-j removedown
bind M-k removeup
bind M-l removeright

definekey top Print exec scrot $HOME/Pictures/Screenshots/$(date +%Y-%m-%d-%H--%M--%S).png
definekey top XF86AudioRaiseVolume exec amixer -q set Master 6%+
definekey top XF86AudioLowerVolume exec amixer -q set Master 6%-
definekey top XF86AudioMute exec amixer -q set Master playback toggle
definekey top XF86ScreenSaver exec light-locker-command -l
definekey top XF86MonBrightnessUp exec xbacklight +20%
definekey top XF86MonBrightnessDown exec xbacklight -20%

definekey top XF86AudioPrev exec playerctl previous
definekey top XF86AudioPlay exec playerctl play-pause
definekey top XF86AudioNext exec playerctl next

# Hooks
addhook switchwin info [%n] %t
addhook switchframe info [%n] %t

# Java Applications
exec wmname LG3D

# Unmanage windows
unmanage pinentry
unmanage qconsole

# Background
exec $HOME/.config/ratpoison/scripts/startup.sh
