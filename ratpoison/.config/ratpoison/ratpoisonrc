escape s-j

set startupmessage on

set msgwait 0
set bgcolor #EBEBEB
set fgcolor #2F2F2F
set font "terminus:size=9"
set inputwidth 0
set framefmt [%f] %c (%wx%h)
set onlyborder 0

set barsticky 0
set barpadding 4 2
set bargravity nw
set barinpadding 1
set barborder 0
set padding 0 16 0 0
set winliststyle row

set border 3
set fwcolor #ef4291
set bwcolor #9F9F9F

set winname class

set rudeness 12

# workspaces
exec rpws init 4 -k

bind F1 exec rpws 1
bind F2 exec rpws 2
bind F3 exec rpws 3
bind F4 exec rpws 4

# Shortcuts
bind Escape abort

bind C-r restart

bind space exec rofi -modi "drun,run,system-menu:$HOME/.local/share/rofi/rofi-power-menu/rofi-power-menu --no-symbols" -show drun

bind slash swap

bind S split
bind C-S split
bind bar hsplit

# vi moves
bind h focusleft
bind j focusdown
bind k focusup
bind l focusright
bind H exchangeleft
bind J exchangedown
bind K exchangeup
bind L exchangeright

# tab cycles windows
bind Tab focus
bind ISO_Left_Tab focusprev

unbind C-a
unbind a
bind d time

# gnu screen binds
bind C-k delete
bind C-K kill
unbind C-x
unbind x
bind x exec light-locker-command -l
bind X remove

bind M-h removeleft
bind M-j removedown
bind M-k removeup
bind M-l removeright

# fn keys
definekey top Print exec scrot $HOME/Pictures/Screenshots/$(date +%Y-%m-%d-%H--%M--%S).png
definekey top XF86AudioRaiseVolume exec amixer -q set Master 6%+
definekey top XF86AudioLowerVolume exec amixer -q set Master 6%-
definekey top XF86AudioMute exec amixer -q set Master playback toggle
definekey top XF86ScreenSaver exec light-locker-command -l
definekey top XF86MonBrightnessUp exec xbacklight +20%
definekey top XF86MonBrightnessDown exec xbacklight -20%

definekey top XF86AudioPrev exec mpris2controller Previous
definekey top XF86AudioPlay exec mpris2controller PlayPause
definekey top XF86AudioNext exec mpris2controller Next


# Java Applications
exec wmname LG3D

# Unmanage windows
unmanage pinentry
unmanage qconsole
unmanage stalonetray

# custom settings (patched ratpoison)
set gap 0
set ignorehints on

exec xrdb $HOME/.Xresources
exec xsetroot -solid "#EBEBEB"

exec $HOME/.config/ratpoison/scripts/startup.sh &
